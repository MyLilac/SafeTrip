/* pages/add/add.wxss */

.container {
  display: flex;
  flex-direction: column;
  width: 100vw;
  height: 100%;
  /* background-image: url('https://oa-dev.hitadri.com/ciscn/image/bg.jpg'); */
  background-size: cover;
}

.text-span {
  margin-top: 10rpx;
  color: blue;
  font-style: bolder;
}


.search-location-button {
  margin: 5% 0 3% 0;
  font-size: 35rpx;
  height: 80rpx;
  width: 97%;
  background-color: rgba(0, 0, 255, 0.4);
  color: #fff;
}

.top-container {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100rpx;
  font-weight: 600;
  background-color: #eee;
  border-bottom-color: #d2dcde;
  border-bottom-style: solid;
  border-bottom-width: 3rpx;
}

.down-container {
  display: flex;
  flex-direction: column;
  padding-left: 5%;
  padding-right: 5%;
  padding-bottom: 20rpx;
}
.picker-container {
  display: flex;
  flex-direction: row;
}

.input-text {
  margin: 10rpx 0 0 0;
  width: 85%;
  border-color: rgba(0, 0, 0, 0.2);
  border-style: solid;
  border-width: 8rpx;
  border-radius: 10rpx;
  height: 80rpx;
  padding: 0rpx 5%;
}


.input-textarea {
  margin-top: 2%;
  width: 85%;
  border-color: rgba(0, 0, 0, 0.2);
  border-style: solid;
  border-width: 8rpx;
  border-radius: 10rpx;
  height: 240rpx;
  padding: 2% 5%;
}
.input-placeholder {
  font-size: 35rpx;
  color: rgba(0, 0, 0, 0.2);
}

.focus {
  border-color: rgba(0, 0, 255, 0.4);
  border-width: 10rpx;
}

.text-weeks {
