.container {
}

.movies {
  height: 100%;
}

.movie {
  position: relative;
  margin-bottom: 5px;
}

.movie-cover {
  width: 100%;
  height: 160px;
  box-shadow: 0 2px 2px #ebebeb;
}

.movie-star {
  position: absolute;
  right: 10px;
  top: 10px;
  font-size: 40rpx;
  color: #fff;
}

.movie-score {
  position: absolute;
  right: 10px;
  bottom: 10px;
  font-size: 40rpx;
  color: #fff;
}
