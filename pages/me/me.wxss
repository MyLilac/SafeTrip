.user {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  box-sizing: border-box;
  background-image: url('https://oa-dev.hitadri.com/ciscn/image/index-bg.png');
  background-size: cover;
}

.user .user-box {
  position: absolute;
  top: 0;
  bottom: 0;
}

