/* pages/comment/comment.wxss */

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.user-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 200rpx;
}

.userinfo-container {
  display: flex;
  height: 50%;
  margin-left: 20rpx;
  flex-direction: column;
  align-items: space-between;
  justify-content: space-between;
}

.time-class {
  font-size: 24rpx;
}

.idea-text {
  margin-left: 30rpx;
  margin-right: 30rpx;
  line-height: 1.3;
  letter-spacing:1rpx;
  text-align:justify;
  text-indent: 25px;
}
