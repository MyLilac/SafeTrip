.canvas-test {
  width: 100vw;
  height: 80vh;
  background: black;
}

.container {
  background-image: url('https://oa-dev.hitadri.com/ciscn/image/bg.jpg');
  background-size: cover;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.button {
  color: #0ff;
  font-weight: 500;
  line-height: 18vh;
  width: 18vh;
  height: 18vh;
  border-radius: 9vh;
  background: radial-gradient(circle, #000, #01080a, #09b2bb);
  opacity: 0.7;
}

.title-text {
  color: #0ff;
  font-size: 56rpx;
  font-weight: 700;
  text-indent: 50rpx;
  line-height: 1.3;
  width: 80%;
}
